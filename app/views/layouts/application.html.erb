
<!DOCTYPE html>
<html>
<head>
<%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  
<% flash.each do|key,value| %>
	<div class= "flash" <%= key %>
	<%= value %>
	</div>
<% end %>
  <title>Holidaysapp</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="banner">
	
	<b>Nolan's Travel </b>
	<br><br>
</div>
<div id="nav">
    <ul>
	<% if !cssigned_in? %>
		<% if !signed_in? %>
			<li><%= link_to "Sign In", signin_path %></li>
			<li><%= link_to "Customer Sign In", cssignin_path %></li>
		<% else %>
		    <li><%=link_to "Home", root_path %></li>
			<li><Signed in as <%=@current_user.username %></li>
			<li><%= link_to "Sign Out", signout_path %></li>
			<li><%= link_to "Travel News", 'http://www.breakingtravelnews.com/' %></li>
			<li><%= link_to "Customers", customers_path%></li>
			<li><%= link_to "Holidays Available ", holidays_path%></li>
			<li><%=link_to "Bookings", bookings_path%></li>
			
		<% end %>
	<% else %>
		<li><%=link_to "Home", root_path %></li>
		<li><%= link_to "Customer Sign Out", cssignout_path %></li>
		<li><%= link_to "Holidays Available ", holidays_path%></li>
		<li><%= link_to "Travel News", 'http://www.breakingtravelnews.com/' %></li>
	    
	<% end %>
	 </ul>
	
</div>
		
<% flash.each do|key,value| %>
	<div class= "flash" <%= key %>
	<%= value %>
	</div>
<% end %>



<%= yield %>

</body>
</html>
