<h1>Listing holidays</h1>

<table>
  <tr>
    <th>Location</th>
    <th>Price</th>
    <th>Hotelname</th>
    <th>Hotelimage</th>
    <th>Nights</th>
    <th>Latitude</th>
    <th>Longitude</th>
    <th>Noofrooms</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @holidays.each do |holiday| %>
  <tr>
    <td><%= holiday.location %></td>
    <td><%= holiday.price %></td>
    <td><%= holiday.hotelName %></td>
    <td><%= holiday.hotelImage %></td>
    <td><%= holiday.nights %></td>
    <td><%= holiday.latitude %></td>
    <td><%= holiday.longitude %></td>
    <td><%= holiday.noOfRooms %></td>
    <td><%= link_to 'Show', holiday %></td>
    <td><%= link_to 'Edit', edit_holiday_path(holiday) %></td>
    <td><%= link_to 'Destroy', holiday, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

